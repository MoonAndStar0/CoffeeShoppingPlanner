<Window x:Class="CoffeeShoppingPlanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoffeeShoppingPlanner"
        mc:Ignorable="d"
        Title="CoffeeShoppingPlanner" Background = "Gray" Height = "400" Width = "500" SizeToContent = "WidthAndHeight">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name = "CoffeeList" Margin="10" HorizontalScrollBarVisibility="Hidden">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding = "{Binding name}" Width = "25*"/>
                <DataGridTextColumn Header="Bezahlt" Binding = "{Binding paid}"  Width = "25*"/>
                <DataGridTextColumn Header="Anzahl" Binding = "{Binding count}"  Width = "25*"/>
                <DataGridTextColumn Header="Datum" Binding = "{Binding date}"  Width = "25*"/>
            </DataGrid.Columns>
        </DataGrid>
        <TextBox x:Name = "NameTB" Margin = "100,5,100,5" TextWrapping = "Wrap" Grid.Row="1"/>
        <TextBox x:Name = "PaidTB" Margin = "100,5,100,5" TextWrapping = "Wrap" Grid.Row="2"/>
        <TextBox x:Name = "CountTB" Margin = "100,5,100,5" TextWrapping = "Wrap" Grid.Row="3"/>
        <TextBox x:Name = "DateTB" Margin = "100,5,100,5" TextWrapping = "Wrap" Grid.Row="4"/>

        <Button x:Name = "Button" Click = "Button_Clicked" Content = "Eintrag hinzufÃ¼gen" Margin="150,5,150,5" Grid.Row="5" FontWeight="Bold"/>
    </Grid>
</Window>
